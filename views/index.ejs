<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
</head>

<body>
    <div class="form-group d-flex justify-content-center">

        <form action="/" method="post" style="width: 700px;" id="form-submit" class="mt-3 text-center" enctype="multipart/form-data">
            <input type="text" class="form-control mt-4" name="name" id="name" placeholder="Name" required>
            <input type="date" class="form-control mt-4" name="dayOfBirth" id="dayOfBirth" placeholder="dayOfBirth" required>
            <input type="text" class="form-control mt-4" name="className" id="className" placeholder="className" required title="Loi kia" >
            <input type="file" class="form-control mt-4" name="avatar" id="avatar"required>
            <input type="submit" class=" btn btn-info mt-4 w-100" value="Add">
            <div style="color: red;  " class="text-center mt-2">

                <% result.errors?.forEach(e=> {  %>
                    <div class="alert alert-danger " role="alert">
                        <%=e%>
                    </div>
                    <% })%>
            </div>
        </form>
        <br>
    </div>
    <div class="content  p-4">
        <h3 class="text-secondary text-center">LIST PRODUCT</h3>
        <br>
        <table class="table table-striped overflow-auto " style="max-height: 400px">
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Day of birth</th>
                <th>class</th>
                <th>Avatar</th>
                <th>Action</th>
            </tr>
            <% result?.products?.forEach((product,index)=> {  %>
                <tr>
                    <td>
                        <%=product.id%>
                    </td>
                    <td>
                        <%=product.name%>
                    </td>
                    <td>
                        <%=product.dayOfBirth%>
                    </td>
                    <td>
                        <%=product.className%>
                    </td>  
                    <td>
                        <img src="<%=product.avatar%>" width="100px">
                    </td>
                    <td class="d-flex justify-content-center">
                        <button type="button" class="btn btn-secondary mr-2 ">
                            <a href="products/update/<%=product.id%>""> Edit</a>
                           </button>
                        <form action="products/delete/<%=product.id%>" method="post">
                            <button type="submit" class="btn btn-danger ml-2">Delete</button>
                        </form>
                    </td>
                </tr>
                <% })%>
        </table>
    </div>
    <script src="/static/script.js"></script>
    <!-- Button trigger modal -->
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script>
        // random id 
        // document.getElementById('id').value = self.crypto.randomUUID()
    </script>
</body>